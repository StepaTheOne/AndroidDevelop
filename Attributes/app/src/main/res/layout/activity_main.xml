<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="412dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/button_black"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:text="Черный текст"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="163dp" />

    <Button
        android:id="@+id/button_red"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:text="Красный текст"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="163dp" />

    <Button
        android:id="@+id/button_8sp"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:text="Размер - 8SP"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/button24sp"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:text="Размер - 24SP"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="208dp" />

    <Button
        android:id="@+id/button_whiteBack"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:text="Белый фон"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="253dp" />

    <Button
        android:id="@+id/button_yellowBack"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:text="Желтый фон"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="253dp" />
</androidx.constraintlayout.widget.ConstraintLayout>