<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/myEditText"
        android:layout_width="412dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_black"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="201dp"
        android:text="Черный текст"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_red"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="26dp"
        android:text="Красный текст"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_8sp"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="264dp"
        android:text="Размер - 8SP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button24sp"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="26dp"
        android:text="Размер - 24SP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_whiteBack"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="26dp"
        android:text="Белый фон"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_yellowBack"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="331dp"
        android:text="Желтый фон"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>